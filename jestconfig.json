{
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "transformIgnorePatterns": ["node_modules/(?!variables/.*)"],
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "^~/(.*?)$": "<rootDir>/src/$1",
    "^~(.*?)$": "<rootDir>/src/$1"
  }
}
